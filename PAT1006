#include<iostream>
#include<string>
using namespace std;
int main() {
	int change;
	int b=0, s=0, g=0;
	cin >> change;
	if (change > 0) {
		g = change % 10;
		change = change / 10;
	}
	if (change > 0) {
		s = change % 10;
		change = change / 10;
	}
	if (change > 0) {
		b = change % 10;
	}
	for (int i = 0; i < b; i++)
	{
		cout << "B";
	}
	for (int i = 0; i < s; i++)
	{
		cout << "S";
	}
	for (int i = 1; i <= g; i++)
	{
		cout << i;
	}
	cin >> b;

	return 0;
}
